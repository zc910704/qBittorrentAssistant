            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--地址栏-->
        <Border
            BorderBrush="Gray"
            BorderThickness="2"
            Background="Gray"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            <Grid
            x:Name="addressBar"            
            Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Margin="2">                    
                </TextBox>
                <Button
                    Grid.Column="1"
                    Margin="2">
                    转到
                </Button>
            </Grid>
        </Border>
